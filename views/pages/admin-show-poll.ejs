<!doctype html>
<html>
  <head>
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.3/css/materialize.min.css'>

    <title>Ask the Audience</title>
  </head>
  <body>
    <h1 class="center"> <%= poll.title %> </h1>

    <div class="container">
      <h5 class="center">
        <a href="/polls/<%= id %>/<%= adminID %>">Administrative Link</a> &nbsp || &nbsp
        <a href="/polls/<%= id %>">Active Poll Link</a> &nbsp || &nbsp
        <a href="#" id="close-poll">Close Poll</a>
      </h5>
      <p class="center">Right Click to Copy and Distribute Poll Link</p><br>

      <h3 class="center">Your Poll Results</h3><br>
      <table class="centered">
        <thead>
          <tr>
            <th>Option</th>
            <th>Count</th>
          </tr>
        </thead>
        <tbody id="choices">
          <% for(var i=0; i < poll.options.length; i++){ %>
            <tr>
              <% if(poll.options[i] != ""){ %>
                <td><h5><%=poll.options[i]%></h5></td>
                <td id="<%=poll.options[i].toUpperCase()%>-votes"> <%= votes[poll.options[i].toUpperCase()]%> </td>
              <% } %>
            </tr>
          <% } %>
        </tbody>
      </table>

      <!-- <div id="connection-count"></div>
      <div id="vote-count">
        <%= votes %>
      </div> -->
      <br><br><br>
    </div>
    <div id="status-message"></div>
    <!-- Make sure your JS is at the bottom of the body! -->
    <script src="/socket.io/socket.io.js"></script>
    <script src="/client.js"></script>
  </body>
</html>
